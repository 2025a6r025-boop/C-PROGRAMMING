#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
int U;
    scanf("%d",&U);
    float totalbill,bill;
    if(U<=50){
    bill=(U*0.50);
        totalbill=bill+(0.20*bill);
        printf("%.2f",totalbill);
    }
    else if(U<=150){
        bill=(50*0.50)+((U-50)*0.75);
        totalbill=bill+(0.20*bill);
        printf("%.2f",totalbill);
    }
    else if(U<=250){
        bill=(50*0.50)+(100*0.75)+((U-150)*1.20);
        totalbill=bill+(0.20*bill);
        printf("%.2f",totalbill);
    }
    else if(U<=500){
        bill=(50*0.50)+(100*0.75)+(100*1.20)+((U-250)*1.50);
        totalbill=bill+(0.20*bill);
        printf("%.2f",totalbill);
    }
    return 0;
}
