//Program to check if a number is prime or not using a while loop.
#include<stdio.h>
int main (){
    int num,flag=0;
    printf("Enter the number:");
    scanf("%d",&num);
    int i=2;
    while(i<num/2){
        if(num%i ==0){
            flag=1;
            break;
        }
        i++;
    }
    if(flag==0){
        printf("Prime");
    }
    else{
        printf("Not Prime");
    }
    
    return 0;
}

// Program to calculate sum of digits of a number using a while loop.
#include<stdio.h>
int main (){
    int n,rem,sum=0;
    printf("Enter the number:");
    scanf("%d",&n);
    while(n!=0){
        rem=n%10;
        sum=sum+rem;
        n=n/10;
    }
    printf("Sum of digits of the number:%d",sum);
    return 0;
} 

// Program to check if a number is Armstrong or not using a while loop.
#include<stdio.h>
#include<math.h>
int main (){
    int num,sum=0,count=0;
    printf("Enter the number:");
    scanf("%d",&num);
    int temp=num;
    while(temp!=0){
        temp=temp/10;
        count=count+1;
    }
    temp=num;
    while(temp!=0){
        int lastdigit=temp%10;
        sum=sum+pow(lastdigit,count);
        temp=temp/10;
    }
    if(num==sum){
        printf("Armstrong");
    }
    else{
        printf("Not Armstrong");
    }
    return 0;
}
