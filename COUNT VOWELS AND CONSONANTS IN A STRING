#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<math.h>
#include<ctype.h>
int main(){
    int countv=0,countc=0;
    char str[2500];
    scanf(" %[^\n]",str);
    for(int i=0;str[i]!='\0';i++){
        if(isalpha(str[i])){
        if(str[i]=='a' || str[i]=='e' || str[i]=='i' || str[i]=='o' || str[i]=='u' || str[i]=='A' || str[i]=='E' || str[i]=='I' || str[i]=='O' || str[i]=='U'){
            countv++;
        }
        else{
            countc++;
        }
    }
}
    printf("%d %d",countv,countc);
    return 0;
}
