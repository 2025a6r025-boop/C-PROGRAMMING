#include<stdio.h>
int main(){
    int num1, num2;
    printf("Enter a number one =");
    scanf("%d", &num1);
    printf("Enter a number two =");
    scanf("%d", &num2);
    (num1>num2)?printf("%d is largest\n", num1):printf("%d is largest\n", num2);
    return 0;
}

#include<stdio.h>
int main(){
    int x,y;
    printf("Enter two numbers");
    scanf("%d%d", &x, &y);
    if(x>y){
        printf("%d is largest",x);
    } else {
    printf("%d is largest",y);
}
    return 0;
}
