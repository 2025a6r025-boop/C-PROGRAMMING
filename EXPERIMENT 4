// Program to check factorial of a number using for loop.
#include<stdio.h>
int main (){
    int i,N,fac=1;
    printf("Enter the number:");
    scanf("%d",&N);
    for(i=1;i<=N;i++){
        fac*=i;
    }
    printf("%d\t",fac);
    return 0;
}

// Program to print the fibonacci sequence using for loop.
#include<stdio.h>
int main (){
    int i,a=0,b=1,c,n;
    printf("Enter the number of terms:");
    scanf("%d",&n);
    
    if(n==1)
        printf("%d",a);
    else{
        printf("%d %d",a,b);
        for(i=3;i<=n;i++){
            c=a+b;
            printf(" %d",c);
            a=b;
            b=c;
        }
    }
    return 0;
}

// Program to find maximum of n numbers using for loop.
#include<stdio.h>


int main() {
    int n, i, num, max;
    
    printf("Enter the number of elements: ");
    scanf("%d", &n);
    
    printf("Enter %d numbers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &num);
        if (i == 0) {
            max = num; // Initialize max with the first number
        } else {
            if (num > max) {
                max = num; // Update max if current number is greater
            }
        }
    }
    
    printf("The maximum number is: %d\n", max);
    return 0;
}
